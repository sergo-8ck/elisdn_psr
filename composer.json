{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.1.0",
        "psr/http-message": "^1.0",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-diactoros": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "Framework\\": "src/Framework/",
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php -S 127.0.0.1:8080 -t public public/index.php",
        "test": "phpunit --colors=always"
    }
}
